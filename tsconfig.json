{
  "compilerOptions": {
    "target": "es2019", 
    "module": "commonjs",
    "outDir": "./dist", 
    "rootDir": "./src", 
    "esModuleInterop": true, 
    "strict": true, 
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "moduleResolution": "node", 
    "sourceMap": true, 
    "baseUrl": ".", 
    "paths": { 
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist"] 
}
